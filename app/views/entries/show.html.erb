<h1><%= @entry.title %></h1>

<p><%= @entry.body %></p>

<%= link_to "Home", root_path %>
<ul>
  <li><%= link_to "Edit", edit_entry_path(@entry) %></li>
  <li><%= link_to "Delete", entry_path(@entry),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></li>
</ul>

<h2>Comments</h2>
<%= render @entry.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>
